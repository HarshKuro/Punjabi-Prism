  "technical_architecture": {
    "feature_extraction": {
      "mfcc": {
        "name": "Mel-Frequency Cepstral Coefficients",
        "dimensions": 20,
        "purpose": "Baseline acoustic feature for speaker/audio characteristics",
        "use_case": "Simple cosine similarity-based spoof detection",
        "parameters": {
          "n_mfcc": 20,
          "sample_rate": 16000,
          "hop_length": 512,
          "n_fft": 2048
        },
        "advantages": ["Simple", "Fast", "Good for speaker recognition"],
        "limitations": ["Less effective against advanced spoofing"]
      },
      "lfcc": {
        "name": "Linear Frequency Cepstral Coefficients",
        "dimensions": 40,
        "purpose": "Enhanced features with linear frequency scale",
        "use_case": "Advanced spoof detection with ML classifiers",
        "parameters": {
          "n_lfcc": 40,
          "sample_rate": 16000,
          "n_fft": 512,
          "hop_length": 160
        },
        "advantages": ["Better for spoofing artifacts", "Linear scale captures more detail"],
        "limitations": ["More computationally intensive"]
      },
      "cqcc": {
        "name": "Constant Q Cepstral Coefficients",
        "dimensions": 40,
        "purpose": "Specialized features for anti-spoofing",
        "use_case": "Combined with LFCC for maximum detection accuracy",
        "parameters": {
          "n_bins": 96,
          "bins_per_octave": 24,
          "sample_rate": 16000,
          "hop_length": 256
        },
        "advantages": ["Excellent for spoofing detection", "Captures harmonic structure"],
        "limitations": ["Most computationally expensive"]
      },
      "combined_features": {
        "lfcc_cqcc": {
          "total_dimensions": 80,
          "method": "Concatenation of LFCC (40) + CQCC (40)",
          "classifier": "Logistic Regression with L2 regularization",
          "performance": "Best EER: 20.35% on Spoofed-2"
        }
      }
    },

    "classification_methods": {
      "baseline": {
        "name": "Cosine Similarity Scoring",
        "features": "MFCC (20-dim)",
        "algorithm": "Distance to bonafide centroid",
        "training": "Compute mean MFCC vector from all bonafide samples",
        "scoring": "Cosine similarity between test sample and bonafide centroid",
        "threshold": "Optimized to minimize EER",
        "performance": {
          "spoofed_1_eer": 31.32,
          "spoofed_2_eer": 25.31,
          "advantages": ["Simple", "No training required", "Fast inference"],
          "limitations": ["Lower accuracy", "Not adaptable"]
        }
      },
      "advanced": {
        "name": "Machine Learning Classifier",
        "features": "LFCC + CQCC (80-dim)",
        "algorithm": "Logistic Regression",
        "training": "Supervised learning on bonafide vs spoofed labels",
        "parameters": {
          "solver": "lbfgs",
          "max_iterations": 1000,
          "regularization": "L2",
          "random_state": 42
        },
        "scoring": "Probability of being spoofed",
        "performance": {
          "spoofed_1_eer": 24.63,
          "spoofed_2_eer": 20.35,
          "spoofed_2_auc": 0.90,
          "advantages": ["Higher accuracy", "Adaptable", "Probabilistic output"],
          "improvements_over_baseline": "21.5% EER reduction on Spoofed-2"
        }
      }
    },

    "evaluation_metrics": {
      "eer": {
        "name": "Equal Error Rate",
        "description": "Point where False Accept Rate = False Reject Rate",
        "interpretation": "Lower is better (0% = perfect, 50% = random)",
        "use": "Primary spoof detection metric"
      },
      "mindcf": {
        "name": "Minimum Detection Cost Function",
        "description": "Normalized weighted sum of miss and false alarm rates",
        "parameters": {"c_miss": 1, "c_fa": 1, "p_target": 0.05},
        "interpretation": "Lower is better",
        "use": "Cost-sensitive evaluation"
      },
      "cllr": {
        "name": "Log Likelihood Ratio Cost",
        "description": "Calibration quality of detection scores",
        "interpretation": "Lower is better (measures score reliability)",
        "use": "Score calibration assessment"
      },
      "auc": {
        "name": "Area Under ROC Curve",
        "description": "Overall discriminative ability",
        "interpretation": "Higher is better (1.0 = perfect, 0.5 = random)",
        "use": "Overall system performance"
      },
      "pesq": {
        "name": "Perceptual Evaluation of Speech Quality",
        "range": [-0.5, 4.5],
        "interpretation": "Higher is better (>3.0 = good, <2.0 = poor)",
        "use": "Audio quality assessment",
        "project_results": {
          "bonafide_mean": 1.30,
          "spoofed_mean": 1.16,
          "degradation": "11.2%"
        }
      },
      "stoi": {
        "name": "Short-Time Objective Intelligibility",
        "range": [0, 1],
        "interpretation": "Higher is better (>0.8 = good, <0.5 = poor)",
        "use": "Speech intelligibility measurement",
        "project_results": {
          "bonafide_mean": 0.58,
          "spoofed_mean": 0.41,
          "degradation": "28.2%"
        }
      },
      "snr": {
        "name": "Signal-to-Noise Ratio",
        "unit": "dB",
        "interpretation": "Higher is better (>20dB = good, <0dB = poor)",
        "use": "Background noise assessment",
        "project_results": {
          "bonafide_mean": -2.53,
          "spoofed_mean": -4.06,
          "note": "Negative values indicate noisy recordings"
        }
      }
    }
  },

